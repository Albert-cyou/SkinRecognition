<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 应用标题 -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SkinCare AI"
        android:textColor="#333333"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="100dp" />

    <!-- 微信登录按钮 -->
    <Button
        android:id="@+id/wechatLogin"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:textSize="18sp"
        android:backgroundTint="#06C160"
        android:textColor="#FFFFFF"
        android:layout_marginTop="80dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- QQ登录按钮 -->
    <Button
        android:id="@+id/qqLogin"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="QQ登录"
        android:textSize="18sp"
        android:backgroundTint="#12B7F5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/wechatLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部提示文字 -->
    <TextView
        android:id="@+id/tipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录即表示同意《用户协议》和《隐私政策》"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_margin="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>